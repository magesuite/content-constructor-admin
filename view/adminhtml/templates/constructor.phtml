<script>
    function previewContentConstructor(json) {
        requirejs(['jquery'], function ($) {
            var url = "<?= $block->getBaseUrl() ?>content-constructor/preview/view";
            var getTokenUrl = "<?= $block->getPreviewTokenUrl() ?>";
            jQuery.ajax({
                url: getTokenUrl,
                type: "POST",
                data: {configuration: json},
                success: function (secret_preview_token) {
                    var newTab = window.open();
                    jQuery.ajax({
                        url: url,
                        type: "POST",
                        data: {form_key: window.FORM_KEY, configuration:  json, secret_preview_token: secret_preview_token},
                        success: function(response){
                            newTab.document.open();
                            newTab.document.write(response);
                            newTab.document.close();
                        },
                    });
                },
            });

        });
    }

    csWysiwygEditor = undefined;

    openEditorPopup = function(url, name, specs, parent) {
        if ((typeof popups == "undefined") || popups[name] == undefined || popups[name].closed) {
            if (typeof popups == "undefined") {
                popups = new Array();
            }
            var opener = (parent != undefined ? parent : window);
            popups[name] = opener.open(url, name, specs);
        } else {
            popups[name].focus();
        }
        return popups[name];
    }

    closeEditorPopup = function(name) {
        if ((typeof popups != "undefined") && popups[name] != undefined && !popups[name].closed) {
            popups[name].close();
        }
    }
</script>
